<Page x:Class="NolekWPF.Pages.CreateCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NolekWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CreateCustomerPage">

  <StackPanel Grid.Column="1">
    <Label Content="Create New Customer"
           FontSize="20"></Label>
    <StackPanel Orientation="Horizontal"
                Margin="0 0 0 12">
      <Label Width="125">Name*:</Label>
      <TextBox x:Name='txtName'
               Width='150'
               Padding="2"
               Text="{Binding Customer.CustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
    <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Customer.Departments, Mode=TwoWay}"></DataGrid>
    
    <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Customer.Equipments, Mode=TwoWay}"></DataGrid>
    

  </StackPanel>
</Page>
