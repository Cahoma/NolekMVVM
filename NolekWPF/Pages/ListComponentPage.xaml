<Page x:Class="NolekWPF.Pages.ListComponentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NolekWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ListComponentPage">

    <StackPanel>
        <ListBox Height="300" Width="200" ItemsSource="{Binding Components}"
              SelectedItem="{Binding SelectedComponent, Mode=TwoWay}"
              DisplayMemberPath="ComponentName" PreviewMouseDown="PlaceholdersListBox_OnPreviewMouseDown">

        </ListBox>
    </StackPanel>
</Page>
